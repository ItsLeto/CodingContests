{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "Run program on input files",
      "command": "${workspaceFolder}/run.sh",
      "args": [
        "--level",
        "${fileBasenameNoExtension}",
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "Generate output files"
    },
    {
      "type": "shell",
      "label": "Run program on input files & with suppressed output",
      "command": "${workspaceFolder}/run.sh",
      "args": [
        "--level",
        "${fileBasenameNoExtension}",
        "-s"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "Generate output files"
    },
    {
      "type": "shell",
      "label": "Run program on example data",
      "command": "${workspaceFolder}/run.sh",
      "args": [
        "--level",
        "${fileBasenameNoExtension}",
        "-e"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "Generate output files"
    },
    {
      "type": "shell",
      "label": "Run program on example data & suppressed output",
      "command": "${workspaceFolder}/run.sh",
      "args": [
        "--level",
        "${fileBasenameNoExtension}",
        "-s",
        "-e"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "detail": "Generate output files"
    }
  ],
  "version": "2.0.0"
}
